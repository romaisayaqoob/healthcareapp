                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jacob Jones"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

